class Solution {
    int c = 0;
    int r = 0;
    public void inorder(TreeNode root,int k)
    {
        if(root!=null)
        {
            inorder(root.left,k);
            c++;
            if(c==k)
            {
                r = root.val;
                return;
            }
            inorder(root.right,k);

        }
    }
    public int kthSmallest(TreeNode root, int k) {
        inorder(root,k);
        return r;
        
    }
}